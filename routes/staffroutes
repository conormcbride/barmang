var staffarray = require('../models/staff');
var express = require('express');
var router = express.Router();

router.findAll = function(req, res) {
    // Return a JSON representation of our list
    res.json(staffarray);
};

//staffarray.push({id: id, name: name, wage: wage, role: role});
router.newStaff = function(req, res) {
   // var staff = staffarray;
    var id = Math.floor((Math.random() * 101) + 1);
    var name = "brian";
    var wage = 12;
    var role = "Waiter";
    var currentSize = staffarray.length;

    staffarray.push({"id": id, "name": name, "wage": wage, "role": role});

    if ((currentSize + 1) != staffarray.length) {
        res.json({message: 'Staff member added'});
    }

    else {
        res.json({message: 'nobody added!'});
    }

};

module.exports = router;