var staff = require('../models/staff');
var express = require('express');
var router = express.Router();

router.findAll = function(req, res) {

    res.json(staff);
}

router.search = function(req, res) {

    var singlestaff = getByValue(staff, req.params.id);
    //staffid= req.params.id;
    /*forEach(function (staff){
        if(staffid == id){
            res.json(staffid);
        }
        else{
            res.json({message:'Staff ID not recognised'});
        }

    })*/
    if(singlestaff != null){
        res.json(singlestaff);
    }else{

        res.json({message:'Staff ID not recognised'});
    }
    //res.json(singlestaff);

}

function getByValue(arr, id) {

    var result;
    result = arr.filter(function (o) {
        return o.id == id;
    });

    return result ? result[0] : null; // or undefined
}

router.deleteStaff= function(req, res) {
    var staffmem = getByValue(staff,req.params.id);
    var index = staff.indexOf(staffmem);

    var currentSize = staff.length;
    staff.splice(index, 1);

    if((currentSize - 1) == staff.length)
        res.json({ message: 'Staff member deleted!'});
    else
        res.json({ message: 'Staff member not deleted!'});
}
module.exports = router;