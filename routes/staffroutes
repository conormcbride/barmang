function getByValue(arr, id) {

    var result;
    result = arr.filter(function (o) {
        return o.id == id;
    });

    return result ? result[0] : null; // or undefined
}

router.deleteStaff= function(req, res) {
    var staffmem = getByValue(staff, req.params.id);
    var index = staff.indexOf(staffmem);

    var currentSize = staff.length;
    staff.splice(index, 1);

    if ((currentSize - 1) == staff.length)
        res.json({message: 'Staff member deleted!'});
    else
        res.json({message: 'Staff member not deleted!'});

}






router.newStaff=function(req, res){
    var id = Math.floor((Math.random() * 101) + 1);
     var currentSize = staff.length;

    staff.push({"id": id, "name": req.body.name, "wage": req.body.wage, "role": req.body.role, daysabsent:0});

    if ((currentSize + 1) == staff.length)
        res.json({ message: 'Staff member added'});


    else
        res.json( { message: 'Nothing added'});



}



router.addDaysabsent = function(req, res) {

    var staffmem = getByValue(staff,req.params.id);
    staffmem.daysabsent += 1;
    if(staffmem.daysabsent>=5){

        res.json( {message: 'Speak to staff member about absenteeism '})
    }else{
        res.json( {message: 'absence noted'})
    }

}





db.on('error', function (err) {
    console.log('connection error', err);
});
db.once('open', function () {
    console.log('connected to database');
});
module.exports = router;